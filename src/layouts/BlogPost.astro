---
import BaseLayout from './BaseLayout.astro';
import FormattedDate from '../components/FormattedDate.astro';
import ArticleSchema from '../components/ArticleSchema.astro';
import BreadcrumbSchema from '../components/BreadcrumbSchema.astro';
import { AUTHOR, SITE_URL } from '../consts';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
}

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;

// Extract slug from URL path
const slug = Astro.url.pathname.replace(/^\/blog\//, '').replace(/\/$/, '');

// Breadcrumb items
const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Blog', url: '/blog/' },
  { name: title, url: `/blog/${slug}/` }
];
---

<BaseLayout title={title} description={description} image={heroImage}>
  <!-- Article Schema -->
  <ArticleSchema
    title={title}
    description={description}
    pubDate={pubDate}
    updatedDate={updatedDate}
    heroImage={heroImage}
    slug={slug}
  />
  
  <!-- Breadcrumb Schema -->
  <BreadcrumbSchema items={breadcrumbs} />
  <article class="container">
    <header class="post-header">
      <div class="post-meta">
        <FormattedDate date={pubDate} />
        {updatedDate && (
          <span class="updated">
            (Updated: <FormattedDate date={updatedDate} />)
          </span>
        )}
      </div>
      <h1>{title}</h1>
      <p class="description">{description}</p>
    </header>

    {heroImage && (
      <img
        class="hero-image"
        src={heroImage}
        alt={title}
        loading="eager"
      />
    )}

    <div class="prose">
      <slot />
    </div>

    <footer class="post-footer">
      <hr />
      <div class="author">
        <p>Written by <strong>{AUTHOR.name}</strong></p>
        <p class="author-bio">{AUTHOR.bio}</p>
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  .post-header {
    margin-bottom: 2rem;
  }

  .post-meta {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .updated {
    color: var(--color-text-light);
    font-style: italic;
  }

  h1 {
    margin-bottom: 0.75rem;
  }

  .description {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    margin-bottom: 0;
  }

  .hero-image {
    width: 100%;
    margin-bottom: 2rem;
  }

  .prose {
    font-family: var(--font-serif);
    font-size: 1.05rem;
  }

  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4) {
    font-family: var(--font-sans);
  }

  .post-footer {
    margin-top: 3rem;
  }

  .author {
    color: var(--color-text-muted);
  }

  .author strong {
    color: var(--color-text);
  }

  .author-bio {
    font-size: 0.9rem;
    color: var(--color-text-light);
  }
</style>
